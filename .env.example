# Perplexity AI Desktop App - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# API AUTHENTICATION
# ============================================================================

# Primary API key for unified AI server
API_KEY=your-api-key-here

# Alternative: provider-specific keys (if not using unified server)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-service-account.json

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Unified AI server endpoint (OpenAI-compatible)
AI_SERVER_URL=http://localhost:8000/v1

# Timeout for API requests (milliseconds)
AI_REQUEST_TIMEOUT=30000

# ============================================================================
# GOOGLE CLOUD PLATFORM (Vertex AI)
# ============================================================================

# GCP project ID for Vertex AI
GCP_PROJECT_ID=kernel-o6

# GCP region (optional)
GCP_REGION=us-central1

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Enable response caching
CACHE_ENABLED=true

# Cache time-to-live in milliseconds (1 hour = 3600000)
CACHE_TTL=3600000

# Maximum cache size in bytes (100 MB = 104857600)
CACHE_MAX_SIZE=104857600

# ============================================================================
# ROUTING & POLICIES
# ============================================================================

# Default provider (openai, anthropic, vertex)
DEFAULT_PROVIDER=openai

# Default model
DEFAULT_MODEL=gpt-4o-mini

# Maximum cost per request (USD)
COST_LIMIT=0.10

# ============================================================================
# SECURITY & PRIVACY
# ============================================================================

# Disable telemetry (true = no telemetry)
TELEMETRY_DISABLED=true

# Validate API responses
VALIDATE_RESPONSES=true

# Maximum prompt length (characters)
MAX_PROMPT_LENGTH=100000

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Enable fallback to alternative providers on error
ENABLE_FALLBACK=true

# Fallback provider order (comma-separated)
FALLBACK_ORDER=openai,anthropic,vertex

# Rate limiting (requests per minute, 0 = disabled)
RATE_LIMIT_RPM=0

# ============================================================================
# NOTES
# ============================================================================
#
# 1. SECURITY: Never commit .env to git. It's already in .gitignore.
# 2. API KEYS: Store sensitive keys in OS keychain when possible.
# 3. LOCALHOST SERVER: This assumes you're running a unified AI server
#    at localhost:8000/v1 that routes to OpenAI, Anthropic, and Vertex.
# 4. For production: Use encrypted secrets management (e.g., AWS Secrets Manager,
#    Azure Key Vault, or GCP Secret Manager).
# 5. Vertex AI: Requires gcloud authentication or service account JSON.
#

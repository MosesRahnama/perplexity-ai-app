      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Perplexity API integration for research"
    },
    "google-pse": {
      "type": "sse",
      "url": "https://mcp-gateway-1028242746308.us-east5.run.app/model_context_protocol/2024-11-05/sse?server=google-pse",
      "autoApprove": ["*"],
      "timeout": 300,

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Perplexity AI Desktop App - MCP Server Configuration",
  "description": "Configuration for Model Context Protocol servers integration",
  
  "mcpServers": {
    "context7": {
      "type": "sse",
      "url": "https://mcp-gateway-1028242746308.us-east5.run.app/model_context_protocol/2024-11-05/sse?server=context7",
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Context management and retrieval server"
    },
    "curl": {
      "type": "sse",
      "url": "https://mcp-gateway-1028242746308.us-east5.run.app/model_context_protocol/2024-11-05/sse?server=curl",
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "HTTP request and API interaction server"
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp-gateway-1028242746308.us-east5.run.app/model_context_protocol/2024-11-05/sse?server=deepwiki",
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Wikipedia and knowledge base search server"
    },
    "desktop-commander": {
      "type": "command",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@wonderwhy-er/desktop-commander@latest"],
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Desktop automation and system control",
      "priority": "high"
    },
    "filesystem": {
      "type": "command",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-filesystem", "C:\\"],
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "File system operations and management",
      "priority": "high"
    },
    "memory": {
      "type": "command",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "C:\\Users\\Moses\\Mina_Servers\\shared_memory\\knowledge_graph.json"
      },
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Persistent memory and knowledge graph",
      "priority": "high"
    },
    "notion": {
      "type": "sse",
      "url": "https://mcp-gateway-1028242746308.us-east5.run.app/model_context_protocol/2024-11-05/sse?server=notion",

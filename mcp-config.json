    "pieces": {
      "type": "sse",
      "url": "http://localhost:39300/model_context_protocol/2024-11-05/sse",
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Pieces context and code snippet management",
      "priority": "high",
      "local": true
    }
  },
  
  "settings": {
    "isUsingBuiltInNodeForMcp": true,
    "connectionTimeout": 30000,
    "reconnectAttempts": 3,
    "reconnectDelay": 5000,
    "enableLogging": true,
    "logLevel": "info"
  },
  
  "priorities": {
    "high": ["desktop-commander", "filesystem", "memory", "playwright", "windows-mcp", "pieces"],
    "medium": ["puppeteer", "notion", "github"],
    "low": ["context7", "curl", "deepwiki", "sequential-thinking", "perplexity-ask", "google-pse", "duckduckgo"]
  },
  
  "preferences": {
    "menuBarEnabled": true,
    "showConnectionStatus": true,
    "autoRetryFailedConnections": true,
    "validateToolSchemas": true
  }
}
    },
    "playwright": {
      "type": "command",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@playwright/mcp@latest"],
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Browser automation and web interaction",
      "priority": "high"
    },
    "windows-mcp": {
      "type": "command",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "C:\\Users\\Moses\\Mina_Servers\\tools\\Windows-MCP",
        "main.py"
      ],
      "autoApprove": ["*"],
      "timeout": 600,
      "description": "Windows-specific system operations",
      "priority": "high"
    },
    "puppeteer": {
      "type": "command",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-puppeteer@latest"],
      "autoApprove": ["*"],
      "timeout": 300,
      "description": "Advanced browser automation with Puppeteer",
